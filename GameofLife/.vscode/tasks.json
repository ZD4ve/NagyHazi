{
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "bash",
            "args": ["build.sh"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "destroy",
            "type": "shell",
            "command": "rm",
            "args": ["GameofLife"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "version": "2.0.0"
}